*
  margin 0
  padding 0

body
  background color-background
  color color-font
  font-family font-default
  font-size 14px
  @media screen and (max-width: 480px)
    font-size 13px

h1, h2, h3, h4, h5, h6
  font-family font-title

h1
  font-size 1.8em

h2
  font-size 1.5em

h3
  font-size 1.3em

a
  text-decoration none
  color color-link
  &:hover
    text-decoration underline

.alignleft
  float left

.alignright
  float right
  
.aligncenter
  text-align center
  display block
  width 100%

.clearfix
  clearfix()

.inner
  width page-width
  margin 0 auto
  @media screen and (max-width: 480px)
    width 100%
#content
  .inner
    display flexbox
    justify-content space-between
    align-items stretch
    

#main-col
  width left-col-width
  margin-right 20
  float left
  @media screen and (max-width: 480px)
    margin-right 0
    float none
    width 100%

#wrapper
  @media screen and (max-width: 480px)
    margin-right 0